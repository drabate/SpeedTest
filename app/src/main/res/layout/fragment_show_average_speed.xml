<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="speedModel"
            type="com.ubitransport.speedtest.model.SpeedModel" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.fragment.ShowAverageSpeedFragment">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_average_speed"
            android:textSize="@dimen/text_medium"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/material_big_margin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/speed"
            app:layout_constraintStart_toStartOf="parent"
            />
        <TextView
            android:id="@+id/speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{speedModel.averageSpeed}"
            android:textSize="@{speedModel.averageSpeed != @string/still_no_average ? @dimen/text_big : @dimen/text_small}"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
             />

    </android.support.constraint.ConstraintLayout>
</layout>

